{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Suitable for Node.js ESM
    "moduleResolution": "NodeNext", // Works well with ESM
    "baseUrl": ".", // Base directory for module resolution
    "outDir": "./dist", // Although tsx runs directly, tsc needs this if used
    "esModuleInterop": true, // Recommended for CJS/ESM interop
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["main.ts"], // Only include the main file
  "exclude": ["node_modules"]
} 