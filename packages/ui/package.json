{
  "name": "@limbar/ui",
  "private": false,
  "version": "0.4.1",
  "description": "React UI components written in TypeScript for embedding Limbar products such as remote control of Android emulators and iOS simulators in web applications.",
  "type": "module",
  "files": [
    "dist"
  ],
  "homepage": "https://limbar.io",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prepublishOnly": "npm run build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "clsx": "2.1.1",
    "tailwind-merge": "3.0.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "path": "^0.12.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "vite-plugin-dts": "^3.7.2"
  },
  "keywords": [
    "react",
    "ui",
    "android",
    "emulator",
    "android emulator",
    "limbar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/limbario/ui"
  },
  "author": "Limbar",
  "license": "MIT"
}
